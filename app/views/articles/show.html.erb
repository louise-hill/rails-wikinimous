<h1><%= @article.title %></h1>

<p><%= @article.content %></p>
<%= link_to "See the author", name_article_path %>

<%@article.reviews.each do |review| %>
  <p><%= review.content %></p>
  <p><%= link_to "Delete review", review_path(review), method: :delete %><p>
<%end%>

<%= link_to "Back", articles_path %>
<%= link_to "Edit article", edit_article_path(@article) %>
<%= link_to "Delete article", article_path(@article), method: :delete, data: {confirm: 'Are you sure you want to delete?'} %>
<%= link_to "Add a new review", new_article_review_path(@article) %>

